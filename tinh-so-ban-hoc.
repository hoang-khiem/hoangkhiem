a = int(print('nhập số học sinh lớp a: ')) 
b = int(print('nhập số học sinh lớp b: ')) 
c = int(print('nhập số học sinh lớp c: ')) 

lop_a = a//2 + a%2 
lop_b = b//2 + b%2 
lop_c = c//2 + c%2 

so_ban_can_mua = lop_a + lop_b + lop_c 
print('số bàn học tối thiểu trừng cần mua là', so_ban_can_mua, 'cái')
